<div class="container p-4">
    <div class="row">
        <div class="col-md-5">

            <div class="card"> Padre
                <div class="card-body">
                    <form action="/links/edit/{{persona.idPersona}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{persona.Nombres}}" name="Nombres" class="form-control" placeholder="Nombres" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.ApellidoP}}" name="ApellidoP" class="form-control" placeholder="Apellido Paterno">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.ApellidoM}}" name="ApellidoM" class="form-control" placeholder="Apellido Materno">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.Sexo}}" name="Sexo" class="form-control" placeholder="Sexo">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.CI}}" name="CI" class="form-control" placeholder="Carnet de identidad">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.Lugar_de_Nacimiento}}" name="Lugar_de_Nacimiento" class="form-control" placeholder="Lugar de nacimiento">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.FechaNacimiento}}" name="FechaNacimiento" class="form-control" placeholder="Fecha de nacimiento">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.Direccion}}" name="Direccion" class="form-control" placeholder="Direccion">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.Telefono}}" name="Telefono" class="form-control" placeholder="Telefono">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{persona.email}}" name="email" class="form-control" placeholder="E-mail">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>
</div>